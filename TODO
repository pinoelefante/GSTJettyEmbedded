Query Update#6:
DELETE FROM torrent WHERE episodio IN (SELECT ep.id FROM serietv AS se JOIN episodi ep WHERE se.id=ep.serie AND  (se.url="879" OR se.url="840" OR se.url="679") AND provider=2)
DELETE FROM episodi WHERE serie IN (SELECT id FROM serietv WHERE (url="879" OR url="840" OR url="679") AND provider=2)

